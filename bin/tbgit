#!/usr/bin/env ruby

require 'tbgit'
require 'helptext'

tbgit = TBGit.new
helptext = HelpText.new

def version
	puts "tbgit " + Gem.loaded_specs['tbgit'].version.to_s
end

case ARGV[0] 
when "setup"
	tbgit.gather(ARGV.drop(1))

	tbgit.add_remotes
	tbgit.spacer

	tbgit.git_update
	tbgit.spacer

	tbgit.create_local_tracking_remotes
	tbgit.switch_to_master
	tbgit.spacer

	tbgit.git_remote
	tbgit.spacer

	tbgit.git_branch
	tbgit.spacer
when "pull"
	tbgit.update_repos(ARGV[0],ARGV.drop(1))	
when "push"
	tbgit.update_repos(ARGV[0],ARGV.drop(1))	
when "push-origin"
	tbgit.push_origin(ARGV.drop(1))
when "merge"
	tbgit.merge_and_commit(ARGV.drop(1))
when "status"
	tbgit.git_status
when "each"
	tbgit.on_each_gather(ARGV.drop(1))
when "spec"
	tbgit.spec(ARGV.drop(1))
when "add-remotes"
	tbgit.gather(ARGV[0],ARGV.drop(1))
	tbgit.spacer

	tbgit.add_remotes
when "create-locals"
	tbgit.gather(ARGV[0],ARGV.drop(1))
	tbgit.spacer
	
	tbgit.create_local_tracking_remotes
when "add-webhooks"
	tbgit.add_webhooks(ARGV.drop(1))
when "-v"
	version
when "--version"
	version
else
	helptext.helpme
end
